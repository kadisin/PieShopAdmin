@model Pie

<h2>Details for @Model.Name</h2>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="PieId"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.PieId
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="ShortDescription"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.ShortDescription
        </dd>
        <dt class="col-sm-2">
            <label asp-for="LongDescription"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.LongDescription
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Price"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2">
            <label asp-for="AllergyInformation"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.AllergyInformation
        </dd>

        <dt class="col-sm-2">
            <label asp-for="IsPieOfTheWeek"></label>
        </dt>
        <dd class="col-sm-10">
            <input type="checkbox" checked="@Model.IsPieOfTheWeek" disabled/>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="InStock"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.InStock
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Category.Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Category.Name
        </dd>
        @if (Model.Ingredients.Count > 0)
        {
            <dt class="col-sm-2">
                Ingredients in this pie
            </dt>
            <dd class="col-sm-10">
                <table class="table">
                    <tr>
                        <th>Ingredient name</th>
                        <th>Amount</th>
                    </tr>
                    @foreach (var ingredient in Model.Ingredients)
                    {
                        <tr>
                            <td>
                            @ingredient.Name
                        </td>
                        <td>
                            @ingredient.Amount
                        </td>
                    </tr>
                }
            </table>
        </dd>
        }

        <dt class="col-sm-2">
            <label asp-for="ImageThumbnailUrl"></label>
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageThumbnailUrl" width="300" height="150"  />
        </dd>
        <dt class="col-sm-2">
            <label asp-for="ImageUrl"></label>
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageUrl" width="300" height="150" />

        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Pie" asp-action="Index">Back to overview</a>
</div>